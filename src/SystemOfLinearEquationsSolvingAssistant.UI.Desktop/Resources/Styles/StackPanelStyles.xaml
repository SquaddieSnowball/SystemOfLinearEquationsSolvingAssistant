<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:ap="clr-namespace:SystemOfLinearEquationsSolvingAssistant.UI.Desktop.Views.Extensions.AttachedProperties">

    <Style TargetType="StackPanel" x:Key="DefaultStackPanelStyle">
        <Setter Property="ap:PanelChildren.Margin" Value="3"/>
    </Style>

    <Style TargetType="StackPanel" x:Key="HorizontalStackPanelStyle" BasedOn="{StaticResource DefaultStackPanelStyle}">
        <Setter Property="Orientation" Value="Horizontal"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
    </Style>

    <Style TargetType="StackPanel" x:Key="VerticalStackPanelStyle" BasedOn="{StaticResource DefaultStackPanelStyle}">
        <Setter Property="Orientation" Value="Vertical"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <Style TargetType="StackPanel" x:Key="UpDownStackPanelStyle" BasedOn="{StaticResource VerticalStackPanelStyle}">
        <Setter Property="ap:PanelChildren.Margin" Value="0"/>
    </Style>

</ResourceDictionary>